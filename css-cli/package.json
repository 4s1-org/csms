{
  "name": "@yellowgarbagebag/css-cli",
  "version": "1.0.0",
  "private": true,
  "description": "Charging Station Simulator CLI",
  "homepage": "https://gitlab.com/YellowGarbageBag/csms",
  "bugs": {
    "url": "https://gitlab.com/YellowGarbageBag/csms/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@gitlab.com:YellowGarbageBag/csms.git"
  },
  "license": "UNLICENSED",
  "author": "Steffen",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "start:simulation1": "concurrently -k -n tsc,sim \"tsc --watch\" \"nodemon ./dist/simulation1.js | pino-pretty\"",
    "format": "prettier --write \"src/**/*.ts\" \"scripts/**/*.ts\"",
    "lbt": "pnpm run lint && pnpm run build && pnpm run test",
    "lint": "eslint \"{src,scripts}/**/*.ts\"",
    "lint:fix": "pnpm run lint -- --fix",
    "test": "jest --passWithNoTests",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:watch": "jest --watch"
  },
  "prettier": "@hest-lab/eslint-config",
  "dependencies": {
    "@yellowgarbagebag/common-lib": "workspace:*",
    "@yellowgarbagebag/css-lib": "workspace:*",
    "pino-pretty": "^4.5.0",
    "ws": "^7.4.3"
  },
  "devDependencies": {
    "@hest-lab/eslint-config": "^1.4.0",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.25",
    "@types/ws": "^7.4.0",
    "concurrently": "^5.3.0",
    "eslint": "^7.19.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  }
}
