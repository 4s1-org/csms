{
  "name": "@yellowgarbagebag/css-cli",
  "version": "1.0.0",
  "private": true,
  "description": "Charging Station Simulator CLI",
  "homepage": "https://gitlab.com/YellowGarbageGroup/csms",
  "bugs": {
    "url": "https://gitlab.com/YellowGarbageGroup/csms/issues"
  },
  "repository": {
    "type": "git",
    "url": "git@gitlab.com:yellow-garbage-group/csms.git"
  },
  "license": "MIT",
  "author": "Steffen <YellowGarbageBag@4s1.de>",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist/",
    "README.md"
  ],
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "debug": "pnpm run build && node dist/debug-scenario.js | pino-pretty",
    "format": "prettier --write \"src/**/*.ts\" \"scripts/**/*.ts\"",
    "preinstall": "npx only-allow pnpm",
    "lbt": "pnpm run lint && pnpm run build && pnpm run test",
    "lint": "eslint --ext .ts src/",
    "lint:fix": "pnpm run lint -- --fix",
    "start:transactions": "pnpm run build && node ./dist/transactions/transactions.js | pino-pretty",
    "start:pentest": "pnpm run build && node ./dist/pentest-scenario.js | pino-pretty",
    "start:normal-loading": "pnpm run build && node ./dist/normal-loading-scenario.js | pino-pretty",
    "start:scenario2": "pnpm run build && concurrently \"node ./dist/scenario1.js | pino-pretty\" \"node ./dist/scenario1.js | pino-pretty\" \"node ./dist/scenario1.js | pino-pretty\"",
    "test": "jest --passWithNoTests",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:watch": "jest --watch"
  },
  "prettier": "@yellowgarbagegroup/eslint-config",
  "dependencies": {
    "@yellowgarbagebag/common-lib": "workspace:*",
    "@yellowgarbagebag/css-lib": "workspace:*",
    "@yellowgarbagebag/ocpp-lib": "workspace:*",
    "pino-pretty": "4.8.0",
    "ws": "7.5.3"
  },
  "devDependencies": {
    "@types/jest": "26.0.24",
    "@types/node": "^14.17.9",
    "@types/ws": "7.4.7",
    "@yellowgarbagegroup/eslint-config": "^2.0.1",
    "dotenv": "8.6.0",
    "eslint": "7.32.0",
    "jest": "26.6.3",
    "nodemon": "2.0.12",
    "prettier": "2.3.2",
    "ts-jest": "26.5.6",
    "ts-node": "9.1.1",
    "typescript": "4.3.5"
  },
  "engines": {
    "node": ">=14"
  }
}
