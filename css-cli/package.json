{
  "name": "@4s1/css-cli",
  "version": "1.0.0",
  "private": true,
  "description": "Charging Station Simulator CLI",
  "bugs": {
    "url": "https://gitlab.com/4s1/csms/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/4s1/csms.git",
    "directory": "css-cli"
  },
  "license": "MIT",
  "author": "Steffen <steffen@4s1.de>",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist/",
    "README.md"
  ],
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "debug": "pnpm run build && node dist/debug-scenario.js | pino-pretty",
    "format": "prettier --write \"src/**/*.ts\" \"scripts/**/*.ts\"",
    "preinstall": "npx only-allow pnpm",
    "lbt": "pnpm run lint && pnpm run build && pnpm run test",
    "lint": "eslint --ext .ts src/",
    "lint:fix": "pnpm run lint -- --fix",
    "start:transactions": "pnpm run build && node ./dist/transactions/transactions.js | pino-pretty",
    "start:pentest": "pnpm run build && node ./dist/pentest-scenario.js | pino-pretty",
    "start:normal-loading": "pnpm run build && node ./dist/normal-loading-scenario.js | pino-pretty",
    "start:scenario2": "pnpm run build && concurrently \"node ./dist/scenario1.js | pino-pretty\" \"node ./dist/scenario1.js | pino-pretty\" \"node ./dist/scenario1.js | pino-pretty\"",
    "test": "jest --passWithNoTests",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:watch": "jest --watch"
  },
  "prettier": "@4s1/eslint-config",
  "dependencies": {
    "@4s1/common-lib": "workspace:*",
    "@4s1/css-lib": "workspace:*",
    "@4s1/ocpp-lib": "workspace:*",
    "pino-pretty": "7.0.1",
    "ws": "8.2.3"
  },
  "devDependencies": {
    "@4s1/eslint-config": "^3.1.2",
    "@types/jest": "27.0.2",
    "@types/node": "14.17.25",
    "@types/ws": "8.2.0",
    "dotenv": "8.6.0",
    "eslint": "7.32.0",
    "jest": "27.2.5",
    "nodemon": "2.0.13",
    "prettier": "2.4.1",
    "ts-jest": "27.0.5",
    "ts-node": "10.3.0",
    "typescript": "4.4.4"
  },
  "engines": {
    "node": ">=14"
  }
}
