{
  "name": "@yellowgarbagebag/css-cli",
  "version": "1.0.0",
  "private": true,
  "description": "Charging Station Simulator CLI",
  "homepage": "https://gitlab.com/yellow-garbage-group/csms",
  "bugs": {
    "url": "https://gitlab.com/yellow-garbage-group/csms/issues"
  },
  "repository": {
    "type": "git",
    "url": "git@gitlab.com:yellow-garbage-group/csms.git"
  },
  "license": "UNLICENSED",
  "author": "Steffen",
  "exports": "./index.js",
  "type": "module",
  "engines":{
    "node": ">=14"
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist/",
    "README.md"
  ],
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "debug": "pnpm run build && && node dist/debug.js | pino-pretty",
    "format": "prettier --write \"src/**/*.ts\" \"scripts/**/*.ts\"",
    "preinstall": "npx only-allow pnpm",
    "lbt": "pnpm run lint && pnpm run build && pnpm run test",
    "lint": "eslint \"{src,scripts}/**/*.ts\"",
    "lint:fix": "pnpm run lint -- --fix",
    "start:simulation1": "pnpm run build && node ./dist/simulation1.js | pino-pretty",
    "start:simulation2": "pnpm run build && concurrently \"node ./dist/simulation2a.js | pino-pretty\" \"node ./dist/simulation2b.js | pino-pretty\" \"node ./dist/simulation2c.js | pino-pretty\"",
    "test": "jest --passWithNoTests",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:watch": "jest --watch"
  },
  "prettier": "@hest-lab/eslint-config",
  "jest": {
    "collectCoverageFrom": [
      "**/*.ts"
    ],
    "coverageDirectory": "../coverage",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testEnvironment": "node",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    }
  },
  "dependencies": {
    "@yellowgarbagebag/common-lib": "workspace:*",
    "@yellowgarbagebag/css-lib": "workspace:*",
    "@yellowgarbagebag/ocpp-lib": "workspace:*",
    "pino-pretty": "^4.7.1",
    "ws": "^7.4.4"
  },
  "devDependencies": {
    "@hest-lab/eslint-config": "^1.5.0",
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.37",
    "@types/ws": "^7.4.1",
    "concurrently": "^6.0.1",
    "dotenv": "^8.2.0",
    "eslint": "^7.24.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  }
}
