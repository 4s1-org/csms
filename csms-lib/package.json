{
  "name": "@4s1/csms-lib",
  "version": "1.0.0",
  "private": true,
  "description": "Charging Station Management System Library",
  "bugs": {
    "url": "https://gitlab.com/4s1/csms/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/4s1/csms.git",
    "directory": "csms-lib"
  },
  "license": "MIT",
  "author": "Steffen <4s1@4s1.de>",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "rm -rf dist && tsc",
    "build:watch": "tsc --watch",
    "format": "prettier --write \"src/**/*.ts\" \"scripts/**/*.ts\"",
    "lbt": "pnpm run lint && pnpm run build && pnpm run test",
    "lint": "eslint --ext .ts src/",
    "test": "jest --passWithNoTests",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:watch": "jest --watch"
  },
  "prettier": "@4s1/eslint-config",
  "dependencies": {
    "@4s1/common-lib": "workspace:*"
  },
  "devDependencies": {
    "@4s1/eslint-config": "3.7.0",
    "@types/jest": "27.4.1",
    "@types/node": "14.18.12",
    "eslint": "8.9.0",
    "jest": "27.5.1",
    "prettier": "2.5.1",
    "ts-jest": "27.1.3",
    "ts-node": "10.5.0",
    "typescript": "4.5.5"
  },
  "engines": {
    "node": ">=14"
  }
}
