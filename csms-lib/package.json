{
  "name": "@4s1/csms-lib",
  "version": "1.0.0",
  "private": true,
  "description": "Charging Station Management System Library",
  "bugs": {
    "url": "https://gitlab.com/4s1/csms/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/4s1/csms.git",
    "directory": "csms-lib"
  },
  "license": "MIT",
  "author": "Steffen <4s1@4s1.de>",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist/",
    "README.md"
  ],
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "format": "prettier --write \"src/**/*.ts\" \"scripts/**/*.ts\"",
    "preinstall": "npx only-allow pnpm",
    "lbt": "pnpm run lint && pnpm run build && pnpm run test",
    "lint": "eslint --ext .ts src/",
    "lint:fix": "pnpm run lint -- --fix",
    "test": "jest --passWithNoTests",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:watch": "jest --watch"
  },
  "prettier": "@4s1/eslint-config",
  "dependencies": {
    "@4s1/common-lib": "workspace:*"
  },
  "devDependencies": {
    "@4s1/eslint-config": "^3.1.2",
    "@types/jest": "27.0.2",
    "@types/node": "14.17.18",
    "eslint": "7.32.0",
    "jest": "27.2.1",
    "prettier": "2.4.1",
    "ts-jest": "27.0.5",
    "ts-node": "10.2.1",
    "typescript": "4.4.3"
  },
  "engines": {
    "node": ">=14"
  }
}
