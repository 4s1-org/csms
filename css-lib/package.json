{
  "name": "@yellowgarbagebag/css-lib",
  "version": "0.0.1",
  "private": true,
  "description": "Charging Station Simulator Library",
  "homepage": "https://gitlab.com/yellow-garbage-group/csms",
  "bugs": {
    "url": "https://gitlab.com/yellow-garbage-group/csms/issues"
  },
  "repository": {
    "type": "git",
    "url": "git@gitlab.com:yellow-garbage-group/csms.git"
  },
  "license": "UNLICENSED",
  "author": "Steffen",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/",
    "README.md"
  ],
  "scripts": {
    "prebuild": "rm -rf dist/",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "preinstall": "npx only-allow pnpm",
    "lbt": "npm run lint && npm run build && npm run test",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "npm run lint -- --fix",
    "start": "node -r ts-node/register src/index.ts | pino-pretty",
    "start:prod": "node dist/index.js",
    "start:watch": "nodemon --watch src/ -e ts --exec \"npm run build && npm run start:prod | pino-pretty\"",
    "test": "jest --passWithNoTests",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:watch": "jest --watch"
  },
  "prettier": "@hest-lab/eslint-config",
  "dependencies": {
    "@yellowgarbagebag/common-lib": "workspace:*",
    "@yellowgarbagebag/ocpp-lib": "workspace:*"
  },
  "devDependencies": {
    "@hest-lab/eslint-config": "^1.5.0",
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.37",
    "eslint": "^7.24.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "pino-pretty": "^4.7.1",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  },
  "engines": {
    "node": ">=14"
  }
}
