{
  "name": "@yellowgarbagebag/css-lib",
  "version": "0.0.1",
  "private": true,
  "description": "Charging Station Simulator Library",
  "homepage": "https://gitlab.com/YellowGarbageBag/csms",
  "bugs": {
    "url": "https://gitlab.com/YellowGarbageBag/csms/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@gitlab.com:YellowGarbageBag/csms.git"
  },
  "license": "UNLICENSED",
  "author": "Steffen",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "prebuild": "rm -rf dist/",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lbt": "npm run lint && npm run build && npm run test",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "npm run lint -- --fix",
    "start": "node -r ts-node/register src/index.ts | pino-pretty",
    "start:prod": "node dist/index.js",
    "start:watch": "nodemon --watch src/ -e ts --exec \"npm run build && npm run start:prod | pino-pretty\"",
    "test": "jest --passWithNoTests",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:watch": "jest --watch"
  },
  "prettier": "@hest-lab/eslint-config",
  "jest": {
    "collectCoverageFrom": [
      "**/*.ts"
    ],
    "coverageDirectory": "../coverage",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testEnvironment": "node",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    }
  },
  "dependencies": {
    "@yellowgarbagebag/common-lib": "workspace:*",
    "@yellowgarbagebag/ocpp-lib": "workspace:*"
  },
  "devDependencies": {
    "@hest-lab/eslint-config": "^1.5.0",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.33",
    "eslint": "^7.21.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "pino-pretty": "^4.7.1",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.3",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3"
  }
}
