{
  "name": "@4s1/css-lib",
  "version": "1.0.0",
  "private": true,
  "description": "Charging Station Simulator Library",
  "bugs": {
    "url": "https://gitlab.com/4s1/csms/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/4s1/csms.git",
    "directory": "css-lib"
  },
  "license": "MIT",
  "author": "Steffen <steffen@4s1.de>",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "rm -rf dist && tsc",
    "build:watch": "tsc --watch",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lbt": "npm run lint && npm run build && npm run test",
    "lint": "eslint --ext .ts src/",
    "lint:fix": "npm run lint -- --fix",
    "start": "node -r ts-node/register src/index.ts | pino-pretty",
    "start:prod": "node dist/index.js",
    "start:watch": "nodemon --watch src/ -e ts --exec \"npm run build && npm run start:prod | pino-pretty\"",
    "test": "jest --passWithNoTests",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:watch": "jest --watch"
  },
  "prettier": "@4s1/eslint-config",
  "dependencies": {
    "@4s1/common-lib": "workspace:*",
    "@4s1/ocpp-lib": "workspace:*"
  },
  "devDependencies": {
    "@4s1/eslint-config": "^3.2.0",
    "@types/jest": "27.0.3",
    "@types/node": "14.18.0",
    "eslint": "8.4.0",
    "jest": "27.4.3",
    "nodemon": "2.0.15",
    "pino-pretty": "7.2.0",
    "prettier": "2.5.1",
    "ts-jest": "27.1.0",
    "ts-node": "10.4.0",
    "typescript": "4.5.2"
  },
  "engines": {
    "node": ">=14"
  }
}
