{
  "name": "@4s1/css-ui",
  "version": "1.0.0",
  "private": true,
  "description": "Charging Station Simulator UI",
  "bugs": {
    "url": "https://gitlab.com/4s1/csms/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/4s1/csms.git",
    "directory": "css-ui"
  },
  "license": "MIT",
  "author": "Steffen <steffen@4s1.de>",
  "scripts": {
    "build": "SKIP_PREFLIGHT_CHECK=true react-scripts build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "preinstall": "npx only-allow pnpm",
    "lbt": "npm run lint && npm run build && npm run test",
    "lint": "eslint --ext .ts --ext tsx src/",
    "lint:fix": "npm run lint -- --fix",
    "start": "PORT=3002 SKIP_PREFLIGHT_CHECK=true react-scripts start",
    "test": "echo No tests"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "prettier": "@4s1/eslint-config",
  "dependencies": {
    "@testing-library/dom": "8.5.0",
    "@testing-library/react": "11.2.7",
    "@testing-library/user-event": "13.2.1",
    "@types/react": "17.0.20",
    "@types/react-dom": "17.0.9",
    "@4s1/common-lib": "workspace:*",
    "@4s1/css-lib": "workspace:*",
    "@4s1/ocpp-lib": "workspace:*",
    "bootstrap": "4.6.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-scripts": "4.0.3",
    "typescript": "4.4.3",
    "web-vitals": "2.1.0"
  },
  "devDependencies": {
    "@types/node": "14.17.16",
    "@4s1/eslint-config": "^3.0.0",
    "eslint": "7.32.0",
    "prettier": "2.4.0"
  },
  "engines": {
    "node": ">=14"
  }
}
