{
  "name": "@4s1/csms",
  "version": "1.0.0",
  "private": true,
  "description": "Charging Station Management System",
  "bugs": {
    "url": "https://gitlab.com/4s1/csms/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/4s1/csms.git",
    "directory": "csms"
  },
  "license": "MIT",
  "author": "Steffen <steffen@4s1.de>",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rm -rf dist && tsc",
    "build:watch": "tsc --watch",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lbt": "pnpm run lint && pnpm run build && pnpm run test && pnpm run test:e2e",
    "lint": "eslint --ext .ts src/ test/",
    "setup": "node -r ts-node/register src/setup.ts",
    "start": "node -r ts-node/register src/index.ts | pino-pretty",
    "start:watch": "nodemon --watch src/ -e ts --exec \"pnpm run build && node dist/index.js | pino-pretty\"",
    "test": "jest --passWithNoTests",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config jest.e2e.config.js",
    "test:watch": "jest --watch"
  },
  "prettier": "@4s1/eslint-config",
  "dependencies": {
    "@4s1/common-lib": "workspace:*",
    "@4s1/csms-lib": "workspace:*",
    "@4s1/ocpp-lib": "workspace:*",
    "configstore": "5.0.1",
    "prompts": "2.4.2",
    "ws": "8.5.0"
  },
  "devDependencies": {
    "@4s1/eslint-config": "3.10.0",
    "@types/configstore": "5.0.1",
    "@types/jest": "27.4.1",
    "@types/node": "14.18.12",
    "@types/prompts": "2.0.14",
    "@types/ws": "8.5.3",
    "dotenv": "16.0.0",
    "eslint": "8.11.0",
    "jest": "27.5.1",
    "nodemon": "2.0.15",
    "pino-pretty": "7.5.4",
    "prettier": "2.6.0",
    "ts-jest": "27.1.3",
    "ts-node": "10.7.0",
    "typescript": "4.6.2"
  },
  "engines": {
    "node": ">=14"
  }
}
