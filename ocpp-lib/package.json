{
  "name": "@yellowgarbagebag/ocpp-lib",
  "version": "1.0.0",
  "private": true,
  "description": "OCPP Library",
  "homepage": "https://gitlab.com/yellow-garbage-group/csms",
  "bugs": {
    "url": "https://gitlab.com/yellow-garbage-group/csms/issues"
  },
  "repository": {
    "type": "git",
    "url": "git@gitlab.com:yellow-garbage-group/csms.git"
  },
  "license": "UNLICENSED",
  "author": "Steffen",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist/",
    "README.md"
  ],
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "format": "prettier --write \"src/**/*.ts\" \"scripts/**/*.ts\"",
    "preinstall": "npx only-allow pnpm",
    "lbt": "pnpm run lint && pnpm run build && pnpm run test",
    "lint": "eslint \"{src,scripts}/**/*.ts\"",
    "lint:fix": "pnpm run lint -- --fix",
    "pjs": "node -r ts-node/register scripts/parse-json-schema/index.ts",
    "test": "jest --passWithNoTests",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:watch": "jest --watch"
  },
  "prettier": "@hest-lab/eslint-config",
  "dependencies": {
    "@yellowgarbagebag/common-lib": "workspace:*",
    "ajv": "^8.1.0",
    "ajv-formats": "^2.0.2",
    "class-transformer": "^0.4.0",
    "reflect-metadata": "^0.1.13",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@hest-lab/eslint-config": "^1.5.0",
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.37",
    "@types/uuid": "^8.3.0",
    "eslint": "^7.24.0",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  },
  "engines": {
    "node": ">=14"
  }
}
