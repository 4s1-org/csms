{
  "name": "@yellowgarbagebag/csms-ocpp-lib",
  "version": "1.0.0",
  "private": true,
  "description": "Charge Station Management System - OCPP Library",
  "homepage": "https://gitlab.com/YellowGarbageBag/csms",
  "bugs": {
    "url": "https://gitlab.com/YellowGarbageBag/csms/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@gitlab.com:YellowGarbageBag/csms.git"
  },
  "license": "UNLICENSED",
  "author": "Steffen",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "format": "prettier --write \"src/**/*.ts\" \"scripts/**/*.ts\"",
    "lbt": "pnpm run lint && pnpm run build && pnpm run test",
    "lint": "eslint \"{src,scripts}/**/*.ts\"",
    "lint:fix": "pnpm run lint -- --fix",
    "pjs": "ts-node scripts/parse-json-schema/index.ts",
    "test": "jest --passWithNoTests",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:watch": "jest --watch"
  },
  "prettier": "@hest-lab/eslint-config",
  "jest": {
    "collectCoverageFrom": [
      "**/*.ts"
    ],
    "coverageDirectory": "../coverage",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testEnvironment": "node",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    }
  },
  "dependencies": {
    "@yellowgarbagebag/csms-common-lib": "workspace:*",
    "class-transformer": "^0.3.2",
    "jsonschema": "^1.4.0",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@hest-lab/eslint-config": "^1.4.0",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.25",
    "eslint": "^7.19.0",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  }
}
