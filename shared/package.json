{
  "name": "@yellowgarbagebag/csms-shared",
  "version": "1.0.0",
  "private": true,
  "description": "Charge Station Management System - Shared",
  "homepage": "https://gitlab.com/YellowGarbageBag/csms",
  "bugs": {
    "url": "https://gitlab.com/YellowGarbageBag/csms/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@gitlab.com:YellowGarbageBag/csms.git"
  },
  "license": "UNLICENSED",
  "author": "Steffen",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"scripts/**/*.ts\"",
    "go": "npm run build && npm pack && npm run share",
    "lbt": "npm run lint && npm run build && npm run test",
    "lint": "eslint \"{src,scripts}/**/*.ts\"",
    "lint:fix": "npm run lint -- --fix",
    "pjs": "ts-node scripts/parse-json-schema/index.ts",
    "pjs:full": "npm run reset && npm run pjs && git status",
    "share": "npm run share:backend && npm run share:simulator",
    "share:backend": "npm i --prefix ../backend yellowgarbagebag-csms-shared-1.0.0.tgz",
    "share:simulator": "npm i --prefix ../simulator yellowgarbagebag-csms-shared-1.0.0.tgz",
    "test": "echo No tests available",
    "test:cov": "echo No tests available"
  },
  "prettier": "@hest-lab/eslint-config",
  "dependencies": {
    "class-transformer": "^0.3.2",
    "class-validator": "^0.13.1",
    "pino": "^6.10.0",
    "pino-pretty": "^4.3.0",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@hest-lab/eslint-config": "^1.3.0",
    "@types/node": "^14.14.21",
    "@types/pino": "^6.3.5",
    "eslint": "^7.18.0",
    "prettier": "^2.2.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  }
}
