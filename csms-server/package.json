{
  "name": "@yellowgarbagebag/csms-server",
  "version": "0.0.1",
  "private": true,
  "description": "Charging Station Management System Server",
  "homepage": "https://gitlab.com/yellow-garbage-group/csms",
  "bugs": {
    "url": "https://gitlab.com/yellow-garbage-group/csms/issues"
  },
  "repository": {
    "type": "git",
    "url": "git@gitlab.com:yellow-garbage-group/csms.git"
  },
  "license": "UNLICENSED",
  "author": "Steffen",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "prebuild": "rm -rf dist/",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "preinstall": "npx only-allow pnpm",
    "lbt": "pnpm run lint && pnpm run build && pnpm run test && pnpm run test:e2e",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "pnpm run lint -- --fix",
    "setup": "node -r ts-node/register src/setup.ts",
    "start": "node -r ts-node/register src/index.ts | pino-pretty",
    "start:watch": "nodemon --watch src/ -e ts --exec \"pnpm run build && node dist/index.js | pino-pretty\"",
    "test": "jest --passWithNoTests",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:watch": "jest --watch"
  },
  "prettier": "@hest-lab/eslint-config",
  "jest": {
    "collectCoverageFrom": [
      "**/*.ts"
    ],
    "coverageDirectory": "../coverage",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testEnvironment": "node",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    }
  },
  "dependencies": {
    "@yellowgarbagebag/common-lib": "workspace:*",
    "@yellowgarbagebag/csms-lib": "workspace:*",
    "@yellowgarbagebag/ocpp-lib": "workspace:*",
    "configstore": "^5.0.1",
    "ws": "^7.4.4"
  },
  "devDependencies": {
    "@hest-lab/eslint-config": "^1.5.0",
    "@types/configstore": "^4.0.0",
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.37",
    "@types/ws": "^7.4.1",
    "commander": "^7.2.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.24.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "pino-pretty": "^4.7.1",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  }
}
