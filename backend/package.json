{
  "name": "@yellowgarbagebag/csms-backend",
  "version": "0.0.1",
  "private": true,
  "description": "Charge Station Management System - Charge Station Backend",
  "homepage": "https://gitlab.com/YellowGarbageBag/csms",
  "bugs": {
    "url": "https://gitlab.com/YellowGarbageBag/csms/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@gitlab.com:YellowGarbageBag/csms.git"
  },
  "license": "UNLICENSED",
  "author": "Steffen",
  "scripts": {
    "prebuild": "rm -rf dist/",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lbt": "npm run lint && npm run build && npm run test",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "npm run lint -- --fix",
    "start": "nest start",
    "start:debug": "nest start --debug --watch",
    "start:dev": "nest start --watch",
    "start:prod": "node dist/main",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:watch": "jest --watch",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "prettier": "@hest-lab/eslint-config",
  "jest": {
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testEnvironment": "node",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    }
  },
  "dependencies": {
    "@yellowgarbagebag/csms-shared": "file:../shared",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.2"
  },
  "devDependencies": {
    "@hest-lab/eslint-config": "^1.2.1",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.14",
    "@types/ws": "^7.4.0",
    "eslint": "^7.16.0",
    "jest": "^26.6.3",
    "prettier": "^2.1.2",
    "ts-jest": "^26.4.3",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.5"
  }
}
